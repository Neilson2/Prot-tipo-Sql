git add banco.sql

CREATE TABLE Produtos {
    id INT PRIMARY KEY,
    nome VARCHAR(100),
    preco DECIMAL(10, 2)
    };

INSERT INTO Produtos (id, nome, preco) VALUES (1, 'Livro', 50.00);
INSERT INTO Produtos (id, nome, preco) VALUES (2, 'Caneca', 25.50);
INSERT INTO Produtos (id, nome, preco) VALUES (3, 'Marcador', 8.99);

CREATE TABLE Pedidos {
    id INT PRIMARY KEY,
    produto_id INT,
    quantidade INT,
    FOREIGN KEY (produto_id) REFERENCES Produtos(id)
    };

INSERT INTO Pedidos (id, produto_id, quantidade) VALUES (1, 1, 2);
INSERT INTO Pedidos (id, produto_id, quantidade) VALUES (2, 2, 1);
INSERT INTO Pedidos (id, produto_id, quantidade) VALUES (3, 3, 5);
